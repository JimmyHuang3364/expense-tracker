<div class="d-flex justify-content-center">
  <div style="width: 400px;">
    {{!-- 分類選單 --}}
    <div>
      <form class="align-middle" action="/" method="get">
        <select onchange="submit()" name="sortCondition" style="width: 400px;">
          <option value="" name="">類別</option>
          {{#each allCategoryItem}}
          <option value="{{this.enCategoryName}}" name="{{this.enCategoryName}}">{{this.CategoryName}}</option>
          {{/each}}
        </select>
      </form>
    </div>

    {{!-- 總金額 --}}
    <div class="d-flex justify-content-between mt-3">
      <p class="align-top" style="margin-right: 0;">總金額: </p>
      <h3 style="font-size: 65px;">${{totalAmount}}</h3>
    </div>
  </div>
</div>

{{!-- 新增按鈕 --}}
<div class="d-flex justify-content-end mb-4 mx-auto">
  <a href="/expenseTracker/new" class="btn btn-success">+ 新增支出</a>
</div>

{{!-- 清單 --}}
<section>
  {{#each expenseTrackerItem}}
  <div class="mx-auto mb-3 d-flex flex-row justify-content-between list-item-diet">

    <div class="d-flex">
      <i class="{{this.classIconName}} fa-3x"></i>
      <img src="https://fontawesome.com/icons/home?style=solid" alt="" srcset="">
      <div>
        <p class="m-0" style="font-weight: bold; font-size: 20px">{{this.caption}}</p>
        <p class="m-0" style="font-size: 8px;">{{this.date}}</p>
      </div>
    </div>

    <div class="d-flex align-items-center">
      <p class="m-0">$ {{this.amount}}</p>
    </div>
    {{!-- 清單item功能按鈕 --}}
    <div class="col-auto d-flex align-items-center">
      <a href="/expenseTracker/edit" class="btn btn-secondary mr-4">修改</a>
      <a class="btn btn-outline-danger">刪除</a>
    </div>

  </div>
  {{/each}}
</section>